@import 'nib'

@import url('http://fonts.googleapis.com/css?family=Titillium+Web')
@import url('http://fonts.googleapis.com/css?family=Roboto+Slab')

/* Variables */

font-color-main = #ddd
bg-color-main = #333

font-color-content = #111
bg-color-content = #eee

default-padding = 10px

/* Basic Styling */

body
  color font-color-main
  background bg-color-main
  font-family 'Roboto Slab'

header, footer, nav
  font-family 'Titillium Web'

a, a:hover, a:focus
  color inherit
  text-decoration none

/* Link animation */
a
  transition opacity 0.5s
  
a:hover
  opacity 0.5

/* Header */

header
  text-align center

a.site-title, a.site-title:hover, a.site-title:focus
  text-decoration none

#title, #subtitle
  margin-top default-padding

.img-link
  margin 0px 5px



/* Nav bar */

nav
  overflow auto

nav ul
  padding 0px
  text-align right
  overflow auto

nav li
  list-style none
  display inline
  margin-left default-padding
  line-height 1.5em
  font-size 1.5em

/* Content area */

#content
  color font-color-content
  background bg-color-content
  padding default-padding
  border-radius default-padding
